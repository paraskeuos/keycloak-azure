apiVersion: v1
kind: Pod
metadata:
  name: nginx-pod
spec:
  containers:
    - image: docker.io/library/nginx:1.29.2
      name: nginx
      ports:
        - containerPort: 80
          hostPort: {{ web_server_port }}
      volumeMounts:
        - name: assets-vol
          mountPath: /usr/share/nginx/html:Z
          readOnly: true
  volumes:
    - name: assets-vol
      hostPath:
        path: {{ assets_dir }}
        type: Directory
      
